generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())
  products  Product[] // 1 danh mục có nhiều sản phẩm
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  image       String?   // lưu URL hoặc tên file hình ảnh
  size        String?   // ví dụ: "30x40 cm"
  quantity    Int       // tồn kho
  price       Float
  categoryId  Int
  category    Category  @relation(fields: [categoryId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
