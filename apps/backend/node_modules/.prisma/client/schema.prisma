generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // hoặc "postgresql" nếu bạn dùng PostgreSQL
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}

model Product {
  id          Int      @id @default(autoincrement())
  category    String
  name        String
  description String?
  image       String? // lưu URL hoặc tên file hình ảnh
  size        String? // ví dụ: "30x40 cm"
  quantity    Int // tồn kho
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
